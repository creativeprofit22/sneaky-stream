{
  "name": "sneaky-stream",
  "version": "0.1.0",
  "description": "Browser automation with live screenshot streaming and terminal UI",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "sneaky-stream": "./bin/sneaky-stream.ts"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "check": "bun run lint && bun run typecheck && bun run test"
  },
  "dependencies": {
    "playwright": "^1.48.0",
    "express": "^4.18.2",
    "ws": "^8.16.0",
    "handlebars": "^4.7.8",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "typescript": "^5.3.0",
    "eslint": "^9.0.0"
  },
  "keywords": [
    "browser-automation",
    "playwright",
    "screenshot-streaming",
    "tui",
    "component-extraction"
  ],
  "author": "",
  "license": "MIT"
}
